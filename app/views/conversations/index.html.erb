<div class="container_fluid mc-auto">
  <div class="col-lg-5">
    <h1 class="">Conversations</h1>
    <% @conversations.each do |conversation| %>
      <% if conversation.sender_id == current_user.id || conversation.receiver_id == current_user.id %>
        <% if conversation.sender_id == current_user.id %>
          <% receiver = User.find(conversation.receiver_id) %>
        <% else %>
          <% receiver = User.find(conversation.sender_id) %>
        <% end %>
        <% unless current_user.id == receiver %>
          <div class="mc-auto py-1">
            <%= link_to receiver.full_name, conversation_messages_path(conversation), class: "btn btn-success" %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>