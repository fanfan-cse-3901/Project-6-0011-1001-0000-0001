<div class="columns">
  <div class="column is-3">
    <h3 class="title is-3">All Users</h3>
    <% @users.each do |user| %>
      <% if user.id != current_user.id %>
        <%= link_to "Message #{user.full_name}", conversations_path(sender_id: current_user.id, receiver_id: user.id), method: "post" %>
      <% end %>
    <% end %>
  </div>

  <div class="column is-7">
    <h3 class="title is-3">Conversations</h3>
    <% @conversations.each do |conversation| %>
      <% if conversation.sender_id == current_user.id || conversation.receiver_id == current_user.id %>
        <% if conversation.sender_id == current_user.id %>
          <% receiver = User.find(conversation.receiver_id) %>
        <% else %>
          <% receiver = User.find(conversation.sender_id) %>
        <% end %>
        <% unless current_user.id == receiver %>
          <div class="columns">
            <div class="column">
              <div class="inline-block nudge-down-10"><%= gravatar_for receiver, size: 32 %></div>
              <div class="inline-block"><%= link_to receiver.full_name, conversation_messages_path(conversation) %></div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>