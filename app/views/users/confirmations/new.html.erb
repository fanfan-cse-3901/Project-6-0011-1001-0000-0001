<div class="container">
  <h2 class="pt-5">Resend confirmation instructions</h2>
  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), :class => "form-control w-25" %>
  </div>
  <div class="actions">
    <%= f.submit "Resend confirmation instructions", :class => "btn btn-primary px-5" %>
  </div>
  <% end %>
  <%= render "users/shared/links" %>
</div>
