<div class="container">
  <h1 class="pt-3">Current Admins</h1>

  <%= render 'user', @user %>

  <%= form_tag(users_set_admin_path, :method => "put") do |form| %>
    <div class="field">
      <%= label_tag(:email, "Email: ") %>
      <%= text_field_tag :email, '', class: 'form-control w-25' %>
      <div class="py-1"></div>
      <%= submit_tag "Add Admin", class: "btn btn-success" %>
    </div>
  <% end %>
</div>